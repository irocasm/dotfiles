    bindsym r [con_mark=r] focus, mode "default"
    bindsym s [con_mark=s] focus, mode "default"
    bindsym t [con_mark=t] focus, mode "default"
    bindsym u [con_mark=u] focus, mode "default"
    bindsym v [con_mark=v] focus, mode "default"
    bindsym w [con_mark=w] focus, mode "default"
    bindsym x [con_mark=x] focus, mode "default"
    bindsym y [con_mark=y] focus, mode "default"
    bindsym z [con_mark=z] focus, mode "default"
    bindsym Return exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: ', mode "default"
}
bindsym $mod+numbersign mode "mark"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        tray_output primary
        strip_workspace_numbers no
}

#set $Locker i3lock -c 300000 && sleep 1
set $Locker ~/.config/i3/lockscreen.sh

set $mode_system System (l) lock (e) logout (s) suspend (h) hibernate (r) reboot (Shift+s) shutdown
mode "$mode_system" {
        bindsym l exec --no-startup-id $Locker, mode "default"
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
        bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        #bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"
        bindsym Shift+s exec --no-startup-id shutdown -P now, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Home mode "$mode_system"
bindsym $mod+l exec --no-startup-id $Locker

# Manual management of external displays
set $mode_display Ext Screen (2) Second Monitor (h) HDMI
mode "$mode_display" {
	bindsym 2 exec --no-startup-id xrandr --output DP-2-2 --auto --right-of eDP-1, mode "default"
	bindsym h exec --no-startup-id xrandr --output HDMI-2 --auto --right-of eDP-1, mode "default"

	bindsym Shift+2 exec --no-startup-id xrandr --output DP-2-2 --auto --off, mode "default"
	bindsym Shift+h exec --no-startup-id xrandr --output HDMI-2 --auto --off, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_display"


# run commands
exec --no-startup-id numlockx on
exec_always --no-startup-id feh --bg-fill ~/.config/wallpaper/Wood.jpg
